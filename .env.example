# Database Configuration - Supabase PostgreSQL
DB_HOST=your-supabase-host.pooler.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your-secure-database-password
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# SAM.gov API Configuration - Get from https://sam.gov/data-services
SAM_API_BASE_URL=https://api.sam.gov/prod/opportunities/v2
SAM_API_KEY=your-primary-sam-api-key
SAM_API_KEYS=key1,key2,key3,key4
SAM_RATE_LIMIT_PER_MINUTE=60
SAM_REQUEST_TIMEOUT=30000
SAM_MAX_RETRIES=3
SAM_RETRY_DELAY=1000

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
API_VERSION=v1

# Monitoring & Health Check
HEALTH_CHECK_INTERVAL=300000
ALERT_EMAIL=alerts@yourcompany.com
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
SYNC_BATCH_SIZE=100
MAX_SYNC_RETRIES=5

# Data Retention
DATA_RETENTION_DAYS=365
CLEANUP_INTERVAL_HOURS=24

# Flowise AI Configuration
FLOWISE_API_URL=https://your-flowise-instance.com/api/v1/prediction/flow-id
FLOWISE_API_KEY=your-flowise-api-key
FLOWISE_TIMEOUT=30000

# Target NAICS Codes (comma-separated)
TARGET_NAICS_CODES=236210,236220,237110,237130,237310,237990

# Date Range for Opportunities
OPPORTUNITIES_DATE_FROM=2025-01-01
OPPORTUNITIES_DATE_TO=2025-06-16

# Sales Filtering Configuration
SALES_MIN_CONTRACT_VALUE=100000
SALES_MAX_CONTRACT_VALUE=50000000
SALES_PREFERRED_DEPARTMENTS=Department of Defense,Department of Veterans Affairs,General Services Administration,Army Corps of Engineers
